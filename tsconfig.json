{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020"
        ],
        "types": [
            "node",
            "vite/client"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        /*"moduleResolution": "bundler",*/
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@agents/common": [
                "./agents/common"
            ],
            "@agents/azure": [
                "./agents/azure"
            ],
            "@agents/local": [
                "./agents/local"
            ],
            "@agents/github": [
                "./agents/github"
            ],
            "@tools/common": [
                "./tools/common"
            ],
            "@tools/gitreleasemanager": [
                "./tools/gitreleasemanager"
            ],
            "@tools/gitversion": [
                "./tools/gitversion"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
