{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "types": ["node", "vite/client"],
    "skipLibCheck": true,
    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@lib": ["./tools/lib.ts"],
      "@agents/common": ["./agents/common"],
      "@agents/azure": ["./agents/azure"],
      "@agents/local": ["./agents/local"],
      "@agents/github": ["./agents/github"],
      "@tools/common": ["./tools/common"],
      "@tools/gitreleasemanager": ["./tools/gitreleasemanager"],
      "@tools/gitversion": ["./tools/gitversion"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.mts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
